<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/night1_word"
        android:orientation="vertical">

        <include
            android:id="@+id/in_title"
            layout="@layout/normal_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/allbackground"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_reset_login_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dpDimen40"
                android:layout_marginTop="@dimen/dpDimen30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dpDimen20"
                    android:text="登录密码修改"
                    android:textColor="#ff9e9e9e"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="@dimen/dpDimen7"
                    android:layout_height="@dimen/dpDimen12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dpDimen20"
                    android:src="@mipmap/arrow_next" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dpDimen1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dpDimen20"
                    android:layout_marginRight="@dimen/dpDimen20"
                    android:background="@color/cela_bg" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_reset_safe_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dpDimen40"
                android:layout_marginTop="@dimen/dpDimen30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dpDimen20"
                    android:text="安全密码修改"
                    android:textColor="#ff9e9e9e"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="@dimen/dpDimen7"
                    android:layout_height="@dimen/dpDimen12"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dpDimen20"
                    android:src="@mipmap/arrow_next" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dpDimen1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dpDimen20"
                    android:layout_marginRight="@dimen/dpDimen20"
                    android:background="@color/cela_bg" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dpDimen30" />
        </LinearLayout>

    </LinearLayout>
</layout>
