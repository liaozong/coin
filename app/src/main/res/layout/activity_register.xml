                   android:textColor="@color/sort_color_bg"
                   android:textSize="@dimen/spDimen11" />
           </LinearLayout>-->

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/dpDimen60"
            android:layout_height="@dimen/dpDimen30"
            android:layout_marginTop="70dp"
            android:src="@mipmap/register_word"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/dpDimen16"
            android:layout_height="@dimen/dpDimen16"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/acount"
            app:srcCompat="@mipmap/icon_clear_word" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/dpDimen16"
            android:layout_height="@dimen/dpDimen16"
            app:layout_constraintBottom_toTopOf="@+id/view3"
            app:layout_constraintEnd_toEndOf="@+id/et_password"
            app:layout_constraintTop_toTopOf="@+id/et_password"
            app:srcCompat="@mipmap/visiable_word" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/dpDimen16"
            android:layout_height="@dimen/dpDimen16"
            app:layout_constraintBottom_toTopOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="@+id/et_safe_password"
            app:layout_constraintTop_toTopOf="@+id/et_safe_password"
            app:srcCompat="@mipmap/novisiable_word" />

        <TextView
            android:id="@+id/tv_get_verfy_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_get_verfycode"
            android:gravity="center"
            android:padding="@dimen/dpDimen5"
            android:text="@string/getverfycode"
            android:textColor="@color/word1"
            app:layout_constraintBottom_toTopOf="@+id/view6"
            app:layout_constraintEnd_toEndOf="@+id/et_verify_code"
            app:layout_constraintTop_toTopOf="@+id/et_verify_code" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>