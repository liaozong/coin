<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="71dp"
    android:background="@color/allbackground">

    <RelativeLayout
        android:id="@+id/close"
        android:layout_width="@dimen/dpDimen45"
        android:layout_height="@dimen/dpDimen45"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/dpDimen25">

        <ImageView
            android:layout_width="@dimen/dpDimen16"
            android:layout_height="@dimen/dpDimen16"
            android:layout_centerInParent="true"
            android:src="@mipmap/normal_back" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_imageView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dpDimen20"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dpDimen18"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/login_word" />
</RelativeLayout>